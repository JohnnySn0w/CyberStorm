void main (int argc, char* argv[])
{
	// keeping this for now as something to pass in to bit/byte functions
	char * args[8]; 
	
	// populate args with argv
	for (int i=0; i < argc; i++)
		args[i] = argv[i]; 
	
	// will direct to bit function
	if (strcmp(argv[1], "-b") == 0) 
        //bit(args[]);
		printf("this will be the bit function\n");
	
	// will direct to byte function
    else if (strcmp(argv[1], "-B") == 0)
        //byte(args[]);
		printf("this will be the byte function\n");
	
	// if something incorrect is printed
	else
	    printf("%s is not a valid method type.\n", argv[1]);
}

